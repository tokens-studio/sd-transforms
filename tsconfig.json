{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext", "dom"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist/src",
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/coverage/*"]
}
